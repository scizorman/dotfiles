{
  "schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ANTHOROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4-5-20251101",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git switch:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Read(~/.claude/skills/**)",
      "Skill(git-operator)",
      "Skill(github-issue-creator)",
      "Skill(github-pr-creator)",
      "Skill(github-sub-issue-creator)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr comment:*)"
    ]
  }
}
